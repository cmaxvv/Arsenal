#!/bin/bash
enable_dprofile() {
	echo "enable dprofile $1 for $2";
	link_from="$MY_ETC_BASE/dprofile.avaliable/$1"
	if [ ! -f "$link_from" ]; then
		echo "can not find profile: $link_from"
		exit
	fi
	link_to="$MY_ETC_BASE/dprofile.d/$2"
	ln -sf $link_from $link_to
}

disable_dprofile() {
	echo "disable dprofile $1";
	p="$MY_ETC_BASE/dprofile.d/$1"
	rm $p
}

show_usage() {
	echo "USAGE: dprofile enable|disable [avaliable_profile] [profile.d]"
	exit
}

case $1 in
	"enable")
		if [ $# -ne 3 ];then
			show_usage
		fi
		enable_dprofile $2 $3
		;;
	"disable")
		if [ $# -ne 2 ];then
			show_usage
		fi
		disable_dprofile $2
		;;
	*)
		echo "bad command"
		show_usage
		;;
esac
